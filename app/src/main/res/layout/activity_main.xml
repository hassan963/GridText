<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <fragment
                android:id="@+id/containerList"
                android:orientation="vertical"
                android:layout_width="400dp"
                android:layout_height="450dp"
                android:name="com.example.hassanmashraful.gridtext.FragmentView.FragmentListView"
                >

            </fragment>

            <fragment
                android:id="@+id/containerGrid"
                android:layout_width="650dp"
                android:layout_height="450dp"
                android:layout_marginLeft="6dp"
                android:name="com.example.hassanmashraful.gridtext.FragmentView.FragmentGridView"
                android:orientation="vertical">

            </fragment>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/categoryList"
                android:layout_marginLeft="4dp"
                android:layout_width="200dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="4.0sp"
                android:layout_height="450dp">
            </ListView>

        </LinearLayout>



    </LinearLayout>







</LinearLayout>
